public class ImageToolkit {

	public void floodFill(Bitmap bmp,int x,int y) {
		if (bmp.getPixel(x,y)) {
			return;
		}
		bmp.setPixel(x,y,true);
		if (x-1>=0) {
			floodFill(bmp,x-1,y);
		}
		if (y-1>=0) {
			floodFill(bmp,x,y-1);
		}
		if (x+1<bmp.getWidth()) {
			floodFill(bmp,x+1,y);
		}
		if (y+1<bmp.getHeight()) {
			floodFill(bmp,x,y+1);
		}
	}

}