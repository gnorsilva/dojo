

/**
 * Class controlling the AaiBot
 */
public class AaiBotBrain {

	public void findHome(AaiBot bot) {
		//
		while (!bot.isHome()) {
			//
			bot.move(16);
			//
			if (bot.isBumperPressed()) {
				while (bot.isBumperPressed()) {
					bot.turn(30);
				}
			} else {
				if (bot.isOnDarkTile()) {
					bot.turn(15);
				} else if (bot.isOnLightTile()) {
					bot.turn(-15);
				}
			}
			//
		}
	}

}
